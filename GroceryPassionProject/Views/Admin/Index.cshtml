@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">Admin Dashboard</h2>

    <div class="row">
        <div class="col-md-4 mb-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Categories</h5>
                    <a class="btn btn-success" asp-controller="Categories" asp-action="Index">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Products</h5>
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="ManageProducts">Go</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h5 class="card-title">User Accounts</h5>
                    <a class="btn btn-warning" asp-controller="Admin" asp-action="Users">Manage</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Suppliers</h5>
                    <a class="btn btn-warning" asp-controller="Admin" asp-action="ManageSuppliers">Go</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage ProductSuppliers</h5>
                    <a class="btn btn-primary" asp-controller="Admin" asp-action="ManageProductSuppliers">Go</a>
                </div>
            </div>
        </div>
    </div>
</div>
